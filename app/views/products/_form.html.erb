<%= nested_form_for([@supplier, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </div>
  <%= f.fields_for :sizes do |size_form| %>
    <%= size_form.text_field :size %>
    <%= size_form.link_to_remove "Remove this size" %>
  <% end %>
  <p>
    <%= f.link_to_add "Add a size", :sizes %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
